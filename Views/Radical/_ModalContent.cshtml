@model Denkiishi_v2.Models.RadicalDetalhesViewModel

<input type="hidden" id="modalRadicalId" value="@Model.RadicalId" />

<div class="modal-header bg-info text-white">
    <div class="d-flex align-items-center gap-3">
        <div class="bg-white text-info rounded-circle d-flex align-items-center justify-content-center shadow-sm"
             style="width: 48px; height: 48px;">
            <span class="fs-4 fw-bold">@Model.Caractere</span>
        </div>
        <div>
            <h5 class="modal-title m-0 fw-bold">Detalhes do Radical</h5>
            <small class="text-white-50"><i class="fa fa-pen-nib me-1"></i> @Model.InfoTraços</small>
        </div>
    </div>
    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<div class="modal-body bg-light">
    <div class="row g-3">

        <div class="col-md-5 d-flex flex-column gap-3">

            <div class="card shadow-sm text-center border-info">
                <div class="card-body py-4">
                    <h1 class="display-1 fw-bold text-dark mb-0">@Model.Caractere</h1>
                    <span class="badge bg-info text-dark bg-opacity-25 border border-info mt-2">RADICAL</span>
                </div>
            </div>

            <div class="card shadow-sm border-0">
                <div class="card-header bg-white border-bottom-0 pt-3 pb-0">
                    <h6 class="fw-bold text-secondary small text-uppercase">
                        <i class="fa fa-link me-1"></i> Usado nos Kanjis:
                    </h6>
                </div>
                <div class="card-body">
                    <div class="d-flex flex-wrap gap-2 justify-content-center">
                        @if (ViewBag.KanjisRelacionados != null)
                        {
                            @foreach (var kanji in ViewBag.KanjisRelacionados)
                            {
                                // Lógica de Cores Completa (N5 ao N1)
                                string borderClass = "border-secondary";
                                string textClass = "text-secondary";

                                switch (kanji.Nivel)
                                {
                                    case 5: borderClass = "border-primary"; break;
                                    case 4: borderClass = "border-info"; break;
                                    case 3: borderClass = "border-success"; break;
                                    case 2: borderClass = "border-warning"; break;
                                    case 1: borderClass = "border-danger"; break;
                                }

                                @* --- AQUI ESTÁ A MUDANÇA (ADICIONEI OS DATA-BS-...) --- *@
                                <a asp-controller="Kanji"
                                   asp-action="Detalhes"
                                   asp-route-id="@kanji.Id"
                                   class="btn btn-light border @borderClass @textClass btn-sm fw-bold shadow-sm"
                                   style="width: 36px; height: 36px; display: flex; align-items: center; justify-content: center;"
                                   target="_blank"
                                   data-bs-toggle="popover"
                                   data-bs-trigger="hover"
                                   data-bs-placement="top"
                                   data-bs-html="true"
                                   title="Kanji N@(kanji.Nivel)"
                                   data-bs-content="<div class='text-center'><span class='display-1 fw-bold text-dark'>@kanji.Literal</span></div>">
                                    @kanji.Literal
                                </a>
                                @* ----------------------------------------------------- *@
                            }
                        }
                        else
                        {
                            <span class="text-muted small fst-italic">Nenhum kanji encontrado.</span>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-7 d-flex flex-column gap-3">

            <div class="card shadow-sm">
                <div class="card-header bg-success text-white py-2 d-flex justify-content-between align-items-center">
                    <span><i class="fa fa-list me-2"></i> Traduções Atuais</span>
                    <span class="badge bg-white text-success rounded-pill">@Model.TraducoesAgrupadas.Sum(g => g.Significados.Count)</span>
                </div>
                <div class="card-body p-0 bg-white" style="max-height: 250px; overflow-y: auto;">
                    @if (Model.TraducoesAgrupadas.Any())
                    {
                        @foreach (var grupo in Model.TraducoesAgrupadas)
                        {
                            <div class="p-3 border-bottom">
                                <strong class="text-success small text-uppercase d-block mb-2">
                                    <i class="fa fa-language me-1"></i> @grupo.Lingua
                                </strong>
                                <div class="d-flex flex-wrap gap-2">
                                    @foreach (var sig in grupo.Significados)
                                    {
                                        <div class="badge bg-light text-dark border d-flex align-items-center px-3 py-2">
                                            <span class="fs-6 fw-normal me-2">@sig.Texto</span>
                                            <span onclick="modalExcluirTraducao(@sig.Id)"
                                                  class="hover-delete ms-1 text-danger"
                                                  title="Excluir tradução"
                                                  style="cursor: pointer;">
                                                <i class="fa fa-times-circle"></i>
                                            </span>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-5 text-muted">
                            <i class="fa fa-ghost fa-2x mb-2 opacity-50"></i>
                            <p class="small m-0">Nenhuma tradução cadastrada ainda.</p>
                        </div>
                    }
                </div>
            </div>

            <div class="card shadow-sm border-primary">
                <div class="card-header bg-primary text-white py-2">
                    <strong><i class="fa fa-plus-circle me-1"></i> Adicionar Significado</strong>
                </div>
                <div class="card-body bg-light">
                    <div class="row g-2 mb-2">
                        <div class="col-4">
                            <select asp-for="LinguaSelecionadaId" asp-items="Model.LinguasDisponiveis" class="form-select form-select-sm" id="modalComboLingua"></select>
                        </div>
                        <div class="col-8">
                            <div class="input-group input-group-sm">
                                <input type="text" id="modalInputPalavra" class="form-control"
                                       placeholder="Ex: Árvore..."
                                       onkeypress="if(event.key === 'Enter'){ event.preventDefault(); modalAddPalavra(); }">
                                <button class="btn btn-primary" type="button" onclick="modalAddPalavra()">
                                    <i class="fa fa-plus"></i>
                                </button>
                            </div>
                        </div>
                    </div>

                    <div id="modalContainerChips" class="d-flex flex-wrap gap-2 p-2 bg-white rounded border" style="min-height: 40px;">
                        <span class="text-muted small w-100 text-center align-self-center fst-italic opacity-50" id="msgVazio">
                            Digite acima para adicionar à lista...
                        </span>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<div class="modal-footer bg-light border-top-0 pt-0">
    <div class="d-flex justify-content-between align-items-center w-100">

        <span id="msgErroModal" class="text-danger fw-bold small shake-text text-truncate" style="display: none; max-width: 60%;">
            <i class="fa fa-exclamation-circle me-1"></i> <span>Erro aqui</span>
        </span>

        <div class="ms-auto">
            <div id="footerBtnDefault" class="d-flex gap-2">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Fechar</button>
                <button type="button" class="btn btn-success px-4 fw-bold shadow-sm" id="btnModalSalvar" onclick="modalSalvar()">
                    <i class="fa fa-save me-1"></i> Salvar
                </button>
            </div>

            <div id="footerBtnConfirm" class="align-items-center gap-2" style="display: none;">
                <span class="text-danger fw-bold small me-2">Tem certeza?</span>
                <button type="button" class="btn btn-sm btn-secondary" onclick="cancelarExclusao()">Não</button>
                <button type="button" class="btn btn-sm btn-danger px-3" id="btnConfirmarExclusao">Sim, excluir</button>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-delete:hover {
        transform: scale(1.2);
        color: #dc3545 !important; /* Vermelho mais forte */
    }
</style>