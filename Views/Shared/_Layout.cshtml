<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Denkiishi</title>

    <link rel="apple-touch-icon" sizes="180x180" href="~/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/favicon-16x16.png">
    <link rel="manifest" href="~/site.webmanifest">
    <link rel="shortcut icon" href="~/favicon.ico">
    <meta name="theme-color" content="#ffffff">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Denkiishi_v2.styles.css" asp-append-version="true" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>
    <header>
        @{
            // Lógica para saber qual menu deixar "Aceso" (Active)
            string currentController = ViewContext.RouteData.Values["Controller"]?.ToString() ?? "";
        }

        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm py-3 border-bottom border-secondary">
            <div class="container">
                <a class="navbar-brand fw-bold d-flex align-items-center gap-2" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fa fa-bolt text-warning" style="font-size: 1.5rem;"></i>
                    <span class="fs-4 tracking-tight">Denkiishi</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                        aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0 gap-1">

                        <li class="nav-item">
                            <a class="nav-link px-3 rounded @(currentController == "Home" ? "active bg-primary bg-opacity-25 fw-bold" : "")"
                               asp-controller="Home" asp-action="Index">
                                <i class="fa fa-torii-gate me-1"></i> Home
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link px-3 rounded @(currentController == "Radical" ? "active bg-primary bg-opacity-25 fw-bold" : "")"
                               asp-controller="Radical" asp-action="Index">
                                <i class="fa fa-th me-1"></i> Radicais
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link px-3 rounded @(currentController == "Kanji" ? "active bg-primary bg-opacity-25 fw-bold" : "")"
                               asp-controller="Kanji" asp-action="Index">
                                <i class="fa fa-font me-1"></i> Kanjis
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link px-3 rounded @(currentController == "Vocabulary" ? "active bg-primary bg-opacity-25 fw-bold" : "")"
                               asp-controller="Vocabulary" asp-action="Index">
                                <i class="fa fa-book-open me-1"></i> Vocabulário
                            </a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle px-3 rounded" href="#" id="studyDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fa fa-graduation-cap me-1"></i> Estudar
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="studyDropdown">
                                <li><a class="dropdown-item" href="#"><i class="fa fa-layer-group text-muted me-2"></i> Meus Baralhos</a></li>
                                <li><a class="dropdown-item" href="#"><i class="fa fa-clock text-muted me-2"></i> Revisão Diária</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="#"><i class="fa fa-chart-line text-muted me-2"></i> Estatísticas</a></li>
                            </ul>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="SyntaxHighlight" asp-action="Index">
                                    <i class="fa fa-paint-brush"></i> Estilos (Tags)
                                </a>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />

                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="py-4">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-light mt-auto">
        <div class="container py-3 d-flex justify-content-between align-items-center">
            <span>&copy; 2026 - <strong>Denkiishi</strong></span>
            <span class="small">Feito com ❤️, C# e <strong>=)</strong></span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    @if (User.Identity.IsAuthenticated && User.Identity.Name == "rayderaguiar@gmail")
    {
        <div id="sakura-container"></div>

        <style>
            /* Container que cobre a tela sem bloquear cliques */
            #sakura-container {
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                pointer-events: none; /* O segredo: deixa clicar através da animação */
                z-index: 9999;
                overflow: hidden;
            }

            .sakura {
                position: absolute;
                background-color: #ffc0cb; /* Rosa Sakura */
                border-radius: 100% 0 100% 0; /* Formato de pétala */
                opacity: 0.8;
                animation: fall linear forwards;
            }

            @@keyframes fall {
                0% {
                    top: -10%;
                    transform: translateX(0) rotate(0deg);
                    opacity: 0;
                }

                10% {
                    opacity: 1;
                }

                100% {
                    top: 110%;
                    transform: translateX(200px) rotate(360deg); /* Cai para o lado girando */
                    opacity: 0;
                }
            }
        </style>

        <script>
            document.addEventListener("DOMContentLoaded", function() {
                const container = document.getElementById('sakura-container');
                const totalPetalas = 30; // Quantidade de pétalas

                // Função para criar uma pétala
                function criarPetala() {
                    const el = document.createElement('div');
                    el.classList.add('sakura');

                    // Tamanhos aleatórios
                    const size = Math.random() * 15 + 10 + 'px';
                    el.style.width = size;
                    el.style.height = size;

                    // Posição horizontal aleatória
                    el.style.left = Math.random() * 100 + 'vw';

                    // Duração da queda aleatória (entre 4s e 10s)
                    const duration = Math.random() * 6 + 4 + 's';
                    el.style.animationDuration = duration;

                    // Atraso aleatório para não caírem todas juntas
                    el.style.animationDelay = Math.random() * 5 + 's';

                    container.appendChild(el);

                    // Remove do DOM quando a animação acabar para não pesar a memória
                    setTimeout(() => {
                        el.remove();
                    }, parseFloat(duration) * 1000 + 5000);
                }

                // Inicia a chuva
                for(let i=0; i<totalPetalas; i++) {
                    criarPetala();
                }

                // Opcional: Continuar criando pétalas periodicamente
                // setInterval(criarPetala, 500);
            });
        </script>
    }

</body>
</html>