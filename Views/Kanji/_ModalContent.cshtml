@model Denkiishi_v2.Models.KanjiDetalhesViewModel

<input type="hidden" id="modalKanjiId" value="@Model.KanjiId" />
<input type="hidden" id="editorMeaningId" value="" />

<div class="modal-header bg-primary text-white">
    <div class="d-flex align-items-center gap-3">
        <h1 class="m-0 fw-bold display-6">@Model.Caractere</h1>
        <div>
            <h5 class="modal-title m-0">Detalhes & Histórias</h5>
            <small class="text-white-50">Leitura: @Model.LeituraOnyomi</small>
        </div>
    </div>
    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<div class="modal-body bg-light p-0">
    <div class="modal-slider-container">
        <div class="modal-slider-wrapper" id="sliderWrapper">

            <div class="modal-slide p-3" id="slideDetalhes">
                <div class="row">
                    <div class="col-md-5">
                        <div class="card shadow-sm text-center mb-3">
                            <div class="card-body">
                                <h1 class="display-3 fw-bold text-dark mb-0">@Model.Caractere</h1>
                                <div class="d-flex align-items-center justify-content-center gap-2 mt-1">
                                    <p class="fs-4 text-muted mb-0">@Model.LeituraOnyomi</p>
                                    @if (!string.IsNullOrEmpty(Model.LeituraOnyomi))
                                    {
                                        <button onclick="falarJapones('@Model.LeituraOnyomi')" class="btn btn-light text-secondary btn-sm rounded-circle border shadow-sm" style="width: 32px; height: 32px;"><i class="fa fa-volume-up"></i></button>
                                    }
                                </div>
                                <small class="text-secondary">(Onyomi)</small>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-7">
                        <div class="card mb-3 shadow-sm">
                            <div class="card-header bg-success text-white py-2">
                                <strong><i class="fa fa-list"></i> Traduções (Clique para Criar História)</strong>
                            </div>
                            <div class="card-body p-2 bg-white" style="max-height: 250px; overflow-y: auto;">
                                @if (Model.TraducoesAgrupadas.Any())
                                {
                                    @foreach (var grupo in Model.TraducoesAgrupadas)
                                    {
                                        <div class="mb-2 border-bottom pb-2">
                                            <strong class="text-success small d-block mb-1">@grupo.Lingua</strong>
                                            <div class="d-flex flex-wrap gap-2">
                                                @foreach (var sig in grupo.Significados)
                                                {
                                                    <div class="badge-clickable @(sig.IsPrincipal ? "badge bg-primary text-white border" : "badge bg-light text-dark border") d-flex align-items-center px-2 py-2"
                                                         onclick="abrirEditorHistoria(@sig.Id, '@sig.Texto', '@grupo.Lingua', @(sig.TemHistoria ? "true" : "false"))"
                                                         title="Editar história">
                                                        <span class="me-2">
                                                            @sig.Texto
                                                            @if (sig.IsPrincipal)
                                                            {
                                                                <i class="fa fa-star text-warning ms-1"></i>
                                                            }
                                                            @if (sig.TemHistoria)
                                                            {
                                                                <i class="fa fa-book-open text-info ms-1"></i>
                                                            }
                                                        </span>
                                                        <span onclick="event.stopPropagation(); modalExcluirTraducao(@sig.Id)" class="hover-delete ms-1 fw-bold" style="font-size: 1.3rem; line-height: 0.8; margin-top: 3px; color: @(sig.IsPrincipal ? "white" : "#dc3545");">&times;</span>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <p class="text-muted small mb-0 text-center py-2">Nenhuma tradução cadastrada.</p>
                                }
                            </div>
                        </div>
                        <div class="card shadow-sm border-primary">
                            <div class="card-header bg-primary text-white py-2"><strong><i class="fa fa-plus-circle"></i> Nova Tradução</strong></div>
                            <div class="card-body p-2">
                                <div class="mb-2"><select asp-for="LinguaSelecionadaId" asp-items="Model.LinguasDisponiveis" class="form-select form-select-sm" id="modalComboLingua"></select></div>
                                <div class="input-group mb-2">
                                    <input type="text" id="modalInputPalavra" class="form-control" placeholder="Digite..." onkeyup="validarTextoEmTempoReal(this)" onkeypress="if(event.key === 'Enter'){ event.preventDefault(); modalAddPalavra(); }" />
                                    <button class="btn btn-outline-primary btn-sm" type="button" onclick="modalAddPalavra()">Adicionar</button>
                                </div>
                                <div id="modalContainerChips" class="d-flex flex-wrap gap-2 mb-3 p-2 bg-light rounded border" style="min-height: 40px;"><span class="text-muted small w-100 text-center align-self-center fst-italic" id="msgVazio">Lista vazia...</span></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-slide p-3 bg-white" id="slideEditor">
                <div class="d-flex align-items-center justify-content-between mb-3 border-bottom pb-2">
                    <button class="btn btn-outline-secondary btn-sm" onclick="voltarParaDetalhes()"><i class="fa fa-arrow-left"></i> Voltar</button>
                    <div class="text-center"><h5 class="m-0 fw-bold text-primary" id="lblEditorTitulo">---</h5><small class="text-muted" id="lblEditorLingua">---</small></div>
                    <div style="width: 70px;"></div>
                </div>
                <div class="mb-3">
                    <div class="syntax-toolbar">
                        <button type="button" class="btn btn-sm btn-white border fw-bold" style="color: #dc3545;" onclick="inserirTagEditor('v')" title="Verbo">Verbo</button>
                        <button type="button" class="btn btn-sm btn-white border fw-bold" style="color: #0d6efd;" onclick="inserirTagEditor('n')" title="Substantivo">Subst.</button>
                        <button type="button" class="btn btn-sm btn-white border fw-bold fst-italic" style="color: #198754;" onclick="inserirTagEditor('adj')" title="Adjetivo">Adj.</button>
                        <button type="button" class="btn btn-sm btn-white border" style="background-color: #ffc107;" onclick="inserirTagEditor('mark')" title="Destaque">Mark</button>
                    </div>
                    <textarea id="txtEditorHistoria" class="form-control editor-textarea" placeholder="Ex: Imagine alguém que..." oninput="atualizarPreviewEditor()"></textarea>
                </div>
                <div class="card bg-light border-0 mb-3">
                    <div class="card-body py-2">
                        <small class="text-muted fw-bold text-uppercase" style="font-size: 0.7rem;">Preview:</small>
                        <div id="divEditorPreview" class="mt-1 fs-5" style="min-height: 40px;"></div>
                    </div>
                </div>
                <div class="d-grid"><button type="button" class="btn btn-success" onclick="salvarHistoriaBackend()"><i class="fa fa-save"></i> Salvar História</button></div>
            </div>

        </div>
    </div>
</div>

<div class="modal-footer d-flex" id="modalFooterPadrao">
    <span id="msgErroModal" class="text-danger fw-bold small me-auto shake-text text-truncate" style="display: none; max-width: 50%;"></span>
    <div class="ms-auto">
        <div id="footerBtnDefault" class="gap-2" style="display: flex;">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
            <button type="button" class="btn btn-success px-4" id="btnModalSalvar" onclick="modalSalvar()">Salvar Contribuições</button>
        </div>
        <div id="footerBtnConfirm" class="align-items-center gap-2" style="display: none;">
            <span class="text-dark fw-bold small me-2">Tem certeza?</span>
            <button type="button" class="btn btn-sm btn-outline-secondary" onclick="cancelarExclusao()">Cancelar</button>
            <button type="button" class="btn btn-sm btn-danger px-3" id="btnConfirmarExclusao">Sim, excluir</button>
        </div>
    </div>
</div>