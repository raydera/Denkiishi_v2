@model Denkiishi_v2.Models.KanjiDetalhesViewModel

<input type="hidden" id="modalKanjiId" value="@Model.KanjiId" />
<input type="hidden" id="editorMeaningId" value="" />

<div class="modal-header bg-primary text-white">
    <div class="d-flex align-items-center gap-3">
        <h1 class="m-0 fw-bold display-6">@Model.Caractere</h1>
        <div>
            <h5 class="modal-title m-0">Detalhes & Histórias</h5>
            <small class="text-white-50">Leitura: @Model.LeituraOnyomi</small>
        </div>
    </div>
    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<div class="modal-body bg-light p-0">
    <div class="modal-slider-container">
        <div class="modal-slider-wrapper" id="sliderWrapper">

            <div class="modal-slide p-3" id="slideDetalhes">
                <div class="row">
                   <div class="col-md-5">
   <div class="card shadow-sm text-center mb-3 badge-clickable" 
     onclick="abrirPainelReadings()" 
     title="Clique para gerenciar Readings"
     style="cursor: pointer; transition: transform 0.2s;">
        <div class="card-body">
            <h1 class="display-3 fw-bold text-dark mb-0">@Model.Caractere</h1>
            <div class="d-flex align-items-center justify-content-center gap-2 mt-1">
                <p class="fs-4 text-muted mb-0">@Model.LeituraOnyomi</p>

                @if (!string.IsNullOrEmpty(Model.LeituraOnyomi))
                {
                    <button onclick="falarJapones('@Model.LeituraOnyomi')"
                            class="btn btn-light text-secondary btn-sm rounded-circle border shadow-sm"
                            title="Ouvir Pronúncia (Onyomi)"
                            style="width: 32px; height: 32px; display: flex; align-items: center; justify-content: center;">
                        <i class="fa fa-volume-up"></i>
                    </button>
                }
            </div>
            <small class="text-secondary">(Onyomi)</small>
        </div>
    </div>

    <div class="card mb-3 shadow-sm">
        <div class="card-header bg-white py-1"><small class="fw-bold text-muted">Similares</small></div>
        <div class="card-body p-2">
            <div class="d-flex flex-wrap gap-2 justify-content-center">
                @if (Model.KanjisSimilares != null && Model.KanjisSimilares.Any())
                {
                    @foreach (var similar in Model.KanjisSimilares)
                    {
                        <a asp-controller="Kanji" asp-action="Detalhes" asp-route-id="@similar.Id"
                           class="btn btn-outline-secondary d-flex flex-column align-items-center p-1 text-decoration-none"
                           style="width: 60px; height: 60px;">
                            <span class="h5 d-block mb-0 text-dark">@similar.Caractere</span>
                            <small class="text-muted" style="font-size: 0.6rem;">@similar.Nome</small>
                        </a>
                    }
                }
                else
                {
                    <span class="text-muted small">Nenhum similar encontrado.</span>
                }
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-white py-1"><small class="fw-bold text-muted">Radicais</small></div>
        <div class="card-body p-2">
            <ul class="list-unstyled mb-0">
                @if (Model.Radicais != null && Model.Radicais.Any())
                {
                    @foreach (var radical in Model.Radicais)
                    {
                        <li class="mb-1 d-flex align-items-center">
                            <span class="badge bg-secondary me-2">@radical.Caractere</span>
                            <small class="text-muted text-truncate" style="max-width: 150px;">@radical.Descricao</small>
                        </li>
                    }
                }
                else
                {
                    <li class="text-muted small">Nenhum radical info.</li>
                }
            </ul>
        </div>
    </div>
</div>

                    <div class="col-md-7">
                        <div class="card mb-3 shadow-sm">
                            <div class="card-header bg-success text-white py-2">
                                <strong><i class="fa fa-list"></i> Traduções (Clique para Criar História)</strong>
                            </div>
                            <div class="card-body p-2 bg-white" style="max-height: 250px; overflow-y: auto;">
                                @if (Model.TraducoesAgrupadas.Any())
                                {
                                    @foreach (var grupo in Model.TraducoesAgrupadas)
                                    {
                                        <div class="mb-2 border-bottom pb-2">
                                            <strong class="text-success small d-block mb-1">@grupo.Lingua</strong>
                                            <div class="d-flex flex-wrap gap-2">
                                                @foreach (var sig in grupo.Significados)
                                                {
                                                    <div class="badge-clickable @(sig.IsPrincipal ? "badge bg-primary text-white border" : "badge bg-light text-dark border") d-flex align-items-center px-2 py-2"
                                                         onclick="abrirEditorHistoria(@sig.Id, '@sig.Texto', '@grupo.Lingua', @(sig.TemHistoria ? "true" : "false"))"
                                                         title="Editar história">
                                                        <span class="me-2">
                                                            @sig.Texto
                                                            @if (sig.IsPrincipal)
                                                            {
                                                                <i class="fa fa-star text-warning ms-1"></i>
                                                            }
                                                            @if (sig.TemHistoria)
                                                            {
                                                                <i class="fa fa-book-open text-info ms-1"></i>
                                                            }
                                                        </span>
                                                        <span onclick="event.stopPropagation(); modalExcluirTraducao(@sig.Id)" class="hover-delete ms-1 fw-bold" style="font-size: 1.3rem; line-height: 0.8; margin-top: 3px; color: @(sig.IsPrincipal ? "white" : "#dc3545");">&times;</span>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <p class="text-muted small mb-0 text-center py-2">Nenhuma tradução cadastrada.</p>
                                }
                            </div>
                        </div>
                        <div class="card shadow-sm border-primary">
                            <div class="card-header bg-primary text-white py-2"><strong><i class="fa fa-plus-circle"></i> Nova Tradução</strong></div>
                            <div class="card-body p-2">
                                <div class="mb-2"><select asp-for="LinguaSelecionadaId" asp-items="Model.LinguasDisponiveis" class="form-select form-select-sm" id="modalComboLingua"></select></div>
                                <div class="input-group mb-2">
                                    <input type="text" id="modalInputPalavra" class="form-control" placeholder="Digite..." onkeyup="validarTextoEmTempoReal(this)" onkeypress="if(event.key === 'Enter'){ event.preventDefault(); modalAddPalavra(); }" />
                                    <button class="btn btn-outline-primary btn-sm" type="button" onclick="modalAddPalavra()">Adicionar</button>
                                </div>
                                <div id="modalContainerChips" class="d-flex flex-wrap gap-2 mb-3 p-2 bg-light rounded border" style="min-height: 40px;"><span class="text-muted small w-100 text-center align-self-center fst-italic" id="msgVazio">Lista vazia...</span></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-slide p-3 bg-white" id="slideEditor">
                <div class="d-flex align-items-center justify-content-between mb-3 border-bottom pb-2">
                    <button class="btn btn-outline-secondary btn-sm" onclick="voltarParaDetalhes()"><i class="fa fa-arrow-left"></i> Voltar</button>
                    <div class="text-center"><h5 class="m-0 fw-bold text-primary" id="lblEditorTitulo">---</h5><small class="text-muted" id="lblEditorLingua">---</small></div>
                    <div style="width: 70px;"></div>
                </div>
                <div class="mb-3">
                    <div class="syntax-toolbar d-flex flex-wrap gap-1 p-2 bg-light border rounded-top">
                        <span class="small text-muted align-self-center me-2">Tags:</span>

                        @if (Model.ListaSyntax != null)
                        {
                            foreach (var item in Model.ListaSyntax)
                            {
                                // Monta o CSS inline dinamicamente baseado nas colunas do banco
                                string estiloBtn = "border: 1px solid #ced4da;";
                                if (!string.IsNullOrEmpty(item.TextColor)) estiloBtn += $"color: {item.TextColor};";
                                if (!string.IsNullOrEmpty(item.BackgroundColor)) estiloBtn += $"background-color: {item.BackgroundColor}; border-color: {item.BackgroundColor};";
                                if (item.IsBold) estiloBtn += "font-weight: bold;";
                                if (item.IsItalic) estiloBtn += "font-style: italic;";
                                if (item.IsUnderline) estiloBtn += "text-decoration: underline;";

                                <button type="button"
                                        class="btn btn-sm btn-white"
                                        style="@estiloBtn"
                                        onclick="inserirTagEditor('@item.Code')"
                                        title="@item.Description">
                                    @item.Code
                                </button>
                            }
                        }
                    </div>

                    <textarea id="txtEditorHistoria" class="form-control editor-textarea"
                              placeholder="Ex: Imagine alguém que..."
                              oninput="atualizarPreviewEditor()"></textarea>
                </div>
                <div class="card bg-light border-0 mb-3">
                    <div class="card-body py-2">
                        <small class="text-muted fw-bold text-uppercase" style="font-size: 0.7rem;">Preview:</small>
                        <div id="divEditorPreview" class="mt-1 fs-5" style="min-height: 40px;"></div>
                    </div>
                </div>
                <div class="d-grid"><button type="button" class="btn btn-success" onclick="salvarHistoriaBackend()"><i class="fa fa-save"></i> Salvar História</button></div>
            </div>
           <div class="modal-slide p-3 bg-white" id="slideReadings">
    <div class="d-flex align-items-center justify-content-between mb-3 border-bottom pb-2">
        <button class="btn btn-outline-secondary btn-sm" onclick="voltarParaDetalhes()">
            <i class="fa fa-arrow-left"></i> Voltar
        </button>
        <h5 class="m-0 fw-bold text-dark">Gerenciar Leituras</h5>
        <div style="width: 70px;"></div>
    </div>

    <div class="row">
        <div class="col-4 border-end" style="max-height: 400px; overflow-y: auto;">
            <div class="list-group list-group-flush" id="listaReadings">
                @foreach (var r in Model.ListaReadings)
                {
                    // ID dinâmico para manipularmos via JS depois (ex: btn-reading-15)
                    <button type="button" id="btn-reading-@r.Id"
                            class="list-group-item list-group-item-action py-3 position-relative" 
                            onclick="selecionarReading(@r.Id, '@r.Type', '@r.Kana', @(r.TemHistoria ? "true" : "false"), @(r.IsPrincipal ? "true" : "false"))">
                        
                        <div class="d-flex w-100 justify-content-between align-items-center">
                            <h5 class="mb-1 fw-bold text-primary">@r.Kana</h5>
                            
                            <i class="fa fa-star text-warning icon-star" style="display: @(r.IsPrincipal ? "block" : "none");" title="Leitura Principal"></i>
                        </div>
                        
                        <p class="mb-1 small text-muted text-uppercase">@r.Type</p>
                        
                        <div class="icon-book text-success small" style="display: @(r.TemHistoria ? "block" : "none");">
                            <i class="fa fa-book-open"></i> História criada
                        </div>
                    </button>
                }
            </div>
        </div>

        <div class="col-8">
            <div id="areaEdicaoReading" style="display:none;">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h6 class="text-primary fw-bold m-0">
                        Editando: <span id="lblReadingSelecionado" class="text-dark display-6 fs-4">---</span>
                        <span class="badge bg-secondary ms-2 align-middle" id="lblReadingType">---</span>
                    </h6>
                    <button id="btnExcluirReading" class="btn btn-outline-danger btn-sm" onclick="excluirHistoriaReading()" style="display:none;">
                        <i class="fa fa-trash"></i> Excluir
                    </button>
                </div>

                <div class="syntax-toolbar d-flex flex-wrap gap-1 p-2 bg-light border rounded-top">
                    @if (Model.ListaSyntax != null)
                    {
                        foreach (var item in Model.ListaSyntax)
                        {
                            string style = $"color:{item.TextColor};";
                            if (!string.IsNullOrEmpty(item.BackgroundColor)) style += $"background-color:{item.BackgroundColor};";
                            <button type="button" class="btn btn-sm btn-white border" style="@style"
                                    onclick="inserirTagReading('@item.Code')">@item.Code</button>
                        }
                    }
                </div>

                <input type="hidden" id="hdnReadingId" />
                <textarea id="txtEditorReading" class="form-control editor-textarea" 
                          placeholder="Crie um mnemônico para a leitura..." 
                          oninput="atualizarPreviewReading()"></textarea>

                <div class="card bg-light border-0 my-3">
                    <div class="card-body py-2">
                        <small class="text-muted fw-bold">Preview:</small>
                        <div id="divPreviewReading" class="mt-1 fs-5" style="min-height: 30px;"></div>
                    </div>
                </div>

                <div class="d-grid">
                    <button id="btnSalvarReading" class="btn btn-success" onclick="salvarReadingBackend()">
                        <i class="fa fa-save"></i> Salvar & Definir como Principal
                    </button>
                </div>
            </div>
            
            <div id="msgSelecioneReading" class="text-center text-muted mt-5">
                <i class="fa fa-hand-point-left fa-3x mb-3 text-secondary opacity-25"></i>
                <p>Selecione uma leitura para editar.</p>
            </div>
        </div>
    </div>
</div>
        </div>
    </div>
</div>

<div class="modal-footer d-flex" id="modalFooterPadrao">
    <span id="msgErroModal" class="text-danger fw-bold small me-auto shake-text text-truncate" style="display: none; max-width: 50%;"></span>
    <div class="ms-auto">
        <div id="footerBtnDefault" class="gap-2" style="display: flex;">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
            <button type="button" class="btn btn-success px-4" id="btnModalSalvar" onclick="modalSalvar()">Salvar Contribuições</button>
        </div>
        <div id="footerBtnConfirm" class="align-items-center gap-2" style="display: none;">
            <span class="text-dark fw-bold small me-2">Tem certeza?</span>
            <button type="button" class="btn btn-sm btn-outline-secondary" onclick="cancelarExclusao()">Cancelar</button>
            <button type="button" class="btn btn-sm btn-danger px-3" id="btnConfirmarExclusao">Sim, excluir</button>
        </div>
    </div>
</div>
<input type="hidden" id="dadosSyntaxHighlight" value='@Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.ListaSyntax.Select(s => new { 
    code = s.Code, 
    textColor = s.TextColor, 
    bgColor = s.BackgroundColor, 
    bold = s.IsBold, 
    italic = s.IsItalic, 
    underline = s.IsUnderline 
})))' />